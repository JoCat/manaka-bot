{
    "name": "manaka-bot",
    "version": "0.0.1",
    "description": "Bot for Discord",
    "main": "dist/index.js",
    "scripts": {
        "dev": "npm run build && node .",
        "build": "npm run clean && tsc",
        "start:dev": "node .",
        "start": "pm2 start dist/index.js --name=bot -o logs/bot.log -e logs/error.log --log-date-format \"DD-MM-YYYY HH:mm:ss\"",
        "deploy": "npm i && npm run build && pm2 delete -s bot || ':' && npm run start",
        "clean": "rimraf dist",
        "prettier": "prettier --config .prettierrc.json --write \"src/**/*.*\"",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/JoCat/manaka-bot.git"
    },
    "keywords": [
        "discord",
        "bot"
    ],
    "author": "JoCat",
    "license": "MIT",
    "bugs": {
        "url": "https://gitlab.com/JoCat/manaka-bot/issues"
    },
    "homepage": "https://gitlab.com/JoCat/manaka-bot#readme",
    "dependencies": {
        "discord.js": "^12.5.1",
        "dotenv": "^8.2.0"
    },
    "devDependencies": {
        "@types/node": "^14.14.14",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "eslint": "^7.18.0",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^2.2.1",
        "prettier-plugin-import-sort": "0.0.6",
        "rimraf": "^3.0.2",
        "typescript": "^4.1.3"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "module",
            "parser": "typescript"
        }
    }
}
