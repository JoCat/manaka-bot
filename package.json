{
    "name": "manaka-bot",
    "version": "0.0.1",
    "description": "Bot for Discord",
    "main": "dist/index.js",
    "scripts": {
        "dev": "npm run build && npm run start:dev",
        "build": "tsup",
        "start:dev": "node .",
        "start": "pm2 start dist/index.js --name=bot -o logs/bot.log -e logs/error.log --log-date-format \"DD-MM-YYYY HH:mm:ss\"",
        "deploy": "npm i && npm run build && pm2 delete -s bot || ':' && npm run start",
        "prettier": "prettier --write src",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/JoCat/manaka-bot.git"
    },
    "keywords": [
        "discord",
        "bot"
    ],
    "author": "JoCat",
    "license": "MIT",
    "bugs": {
        "url": "https://gitlab.com/JoCat/manaka-bot/issues"
    },
    "homepage": "https://gitlab.com/JoCat/manaka-bot#readme",
    "dependencies": {
        "@discordjs/opus": "^0.9.0",
        "@discordjs/voice": "^0.16.0",
        "bufferutil": "^4.0.6",
        "discord.js": "^14.3.0",
        "dotenv": "^16.0.0",
        "erlpack": "github:discord/erlpack",
        "ffmpeg-static": "^5.0.0",
        "libsodium-wrappers": "^0.7.11",
        "play-dl": "^1.9.4",
        "utf-8-validate": "^6.0.3",
        "zlib-sync": "^0.1.7"
    },
    "devDependencies": {
        "@types/node": "^18.16.16",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.13.0",
        "import-sort-style-module": "^6.0.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.2",
        "prettier-plugin-import-sort": "0.0.7",
        "tsup": "^7.2.0",
        "typescript": "^5.1.3"
    },
    "importSort": {
        ".ts": {
            "style": "module",
            "parser": "typescript"
        }
    }
}
