{
    "name": "manaka-bot",
    "version": "0.0.1",
    "description": "Bot for Discord",
    "main": "dist/index.js",
    "scripts": {
        "dev": "npm run build && npm run start:dev",
        "build": "npm run clean && tsup",
        "start:dev": "node .",
        "start": "pm2 start dist/index.js --name=bot -o logs/bot.log -e logs/error.log --log-date-format \"DD-MM-YYYY HH:mm:ss\"",
        "deploy": "npm ci && npm run build && pm2 delete -s bot || ':' && npm run start",
        "clean": "rimraf dist",
        "prettier": "prettier --write src",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/JoCat/manaka-bot.git"
    },
    "keywords": [
        "discord",
        "bot"
    ],
    "author": "JoCat",
    "license": "MIT",
    "bugs": {
        "url": "https://gitlab.com/JoCat/manaka-bot/issues"
    },
    "homepage": "https://gitlab.com/JoCat/manaka-bot#readme",
    "dependencies": {
        "@discordjs/opus": "^0.7.0",
        "discord.js": "^12.5.3",
        "dotenv": "^16.0.0",
        "ffmpeg-static": "^5.0.0",
        "play-dl": "^1.9.4"
    },
    "devDependencies": {
        "@types/node": "^16.11.26",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "eslint": "^8.13.0",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^2.4.0",
        "prettier-plugin-import-sort": "0.0.7",
        "rimraf": "^3.0.2",
        "tsup": "^5.12.6",
        "typescript": "^4.4.3"
    },
    "importSort": {
        ".ts": {
            "style": "module",
            "parser": "typescript"
        }
    }
}
